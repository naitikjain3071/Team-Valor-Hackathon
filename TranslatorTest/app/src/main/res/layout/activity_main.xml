<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37966F"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="253dp"
        android:layout_height="0dp"
        android:layout_marginBottom="105dp"
        android:gravity="center"
        android:textColor="#D5CCCC"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/speak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/source_et" />

    <EditText
        android:id="@+id/source_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="91dp"
        android:background="@drawable/custom_edittext"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/speak"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="74dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="76dp"
        android:text="Speak"
        app:layout_constraintBottom_toTopOf="@+id/sms_act"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        style="@style/button" />

    <Button
        android:id="@+id/sms_act"
        android:layout_width="126dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custom_button"
        android:text="SMS SEND"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speak" />
</androidx.constraintlayout.widget.ConstraintLayout>